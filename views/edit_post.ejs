<%- include("partials/mainheadblock.ejs") -%>

    <body>
        <%- include("partials/mainheader.ejs") -%>
            <div class="container">
                <form method="post" action="/posts/<%- post['id'] %>/edit">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" name="title" class="form-control" id="title" placeholder="Css 3"
                            value="<%- post['title'] %>" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Author</label>
                        <input type="text" name="author" class="form-control" id="author" placeholder="John"
                            value="<%- post['author'] %>" required>
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select name="category" class="form-control" id="category" value="<%- post['category'] %>"
                            required>
                            <option value="Development">Development</option>
                            <option value="Aviation">Aviation</option>
                            <option value="ART">ART</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message">Body</label>
                        <textarea name="body" class="form-control" id="body" rows="3"
                            required><%- post['body'] %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="hashtag">Hashtag</label>
                        <textarea name="hashtag" class="form-control" id="hashtag" rows="3"
                            required><%- post['hashtag'] %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Post</button>
                </form>

                <!-- JavaScript -->
                <%- include("partials/scriptblock.ejs") %>
            </div>
    </body>


    </html>